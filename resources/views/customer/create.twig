{% extends 'template/master.twig' %}

{% block pageTitle %}Tambah Pelanggan{% endblock %}

{% block content %}
    {% include 'template/partials/header.twig' %}

    {% include 'customer/partials/menu.twig' with {'menu': 'create'} %}

    <h2 class="ui header">
        Tambah Pelanggan
        <div class="sub header">Menambah data pelanggan baru.</div>
    </h2>

    <form action="{{ path_for('customers.store') }}" method="post" class="ui form">
        <div class="two fields">
            <div class="six wide {% if errors.name %}error{% endif %} required field">
                <label for="name">Nama Pelanggan</label>
                <input type="text" name="name" id="name" placeholder="Nama Pelanggan" value="{{ old.name }}">
            </div>
            <div class="six wide {% if errors.phone_number %}error{% endif %} field">
                <label for="phone_number">Nomor Telp</label>
                <input type="text" name="phone_number" id="phone_number" placeholder="Nomor Telp" value="{{ old.phone_number }}">
            </div>
        </div>
        <div class="two fields">
            <div class="six wide field">
                <label for="company">Instansi</label>
                <input type="text" name="company" id="company" placeholder="Instansi" value="{{ old.company }}">
            </div>
            <div class="six wide field">
                <label for="address">Alamat</label>
                <textarea name="address" id="address" rows="2" placeholder="Alamat">{{ old.address }}</textarea>
            </div>
        </div>

        {{ csrf.fields|raw }}

        {% include 'template/partials/errors.twig' %}

        <div class="field">
            <button type="submit" class="ui primary button"><i class="save icon"></i>Save</button>
            <a href="{{ path_for('customers.index') }}" class="ui button">Cancel</a>
        </div>
    </form>
{% endblock %}